$( function() {
  $( ".sortable" ).sortable({
    cursor: "move",
    opacity: 0.5,
    update: function( event, ui ) {
      new_order = $(this).sortable('toArray', {attribute: 'data-question-id'});
      $.ajax({
        url: $('.sortable').data('js-url'),
        data: {ordered_list: new_order},
        dataType: "script",
        type: 'POST'
      });
    }
  });
  $( ".sortable" ).disableSelection();
} );
