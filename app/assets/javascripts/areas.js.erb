$(function(){
  $("#listing").treetable({
    expandable: true,
    indent: 40
  });

  $('body').on('click','.indenter a',function(){
    $(this).removeClass();
    if ($(this).attr('title') === "Expand"){
      $(this).addClass('fi-plus size-18');
    }else{
      $(this).addClass('fi-minus size-18');
    }
  });

  var $checkoutForm = $(".admin-form").validate({
        ignore: [],
        errorElement: "small",
        rules : {
            "area[title]" : {
                required : true
            }
        },

        messages : {
            "area[title]" : {
                required : "<%= I18n.translate('backend.mandatory_field')%>"
            }
        },

        errorPlacement : function(error, element) {
            error.insertAfter(element);
        }
    });

});
