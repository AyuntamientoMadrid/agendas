var Search = {

  update_select: function(url, value){
    $.ajax({
      method: "GET",
      url: url,
      data: { id: value },
      dataType: 'script'
    }).error(function(jqXHR, textStatus, errorThrown) {
      console.log("AJAX Error: #{textStatus}");
    });
  }

};


$(function () {

    $('.fdatepicker').fdatepicker({
      format: "<%= I18n.translate("datepicker-format") %>",
    });

    $('#main_area').change(function(){
      Search.update_select('update_areas', $("#main_area option:selected").val());
      Search.update_select('update_holders',$("#main_area option:selected").val());
    });

    $('#child_area').change(function(){
      Search.update_select('update_holders',$("#child_area option:selected").val());
    });
});
