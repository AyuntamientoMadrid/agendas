<div class="small-12 large-4 columns">
  <%= form_tag root_path, method: :get do %>
    <%= hidden_field_tag :order, params[:order] %>
    <div class="mb20">
      <%= text_field_tag :keyword, params[:keyword], placeholder: t('main.form.keyword') %>
    </div>
    <p class="mb40"><%= t('main.form.title')%></p>
    <div class="mb20">
      <%= label_tag :area, t('main.form.main_area'), class: 'title-s' %>
      <div class="custom-select">
       <%= select_tag :area, options_for_select(@tree, params[:area]),prompt: t('main.form.any') %>
      </div>
    </div>
    <div class="mb20">
      <%= label_tag :holder, t('main.form.holder'), class: 'title-s' %>
      <%= select_tag :holder, options_for_select(@holders.map{|holder| [holder.full_name_comma, holder.id]},params[:holder]),prompt: t('main.form.any'), class: 'dropdown'  %>
    </div>
    <div class="mb20">
      <%= label_tag :date, t('main.form.date'), class: 'title-s' %>
      <div class="row">
        <div class="small-6 columns">
          <%= text_field_tag :from,params[:from], class: 'fdatepicker'%>
        </div>
        <div class="small-6 columns">
          <%= text_field_tag :to,params[:to] , class: 'fdatepicker'%>
        </div>
      </div>
    </div>
    <div class="mb20">
      <%= link_to t('main.form.reset'), root_path, class: 'button secondary' %>
      <%= submit_tag t('main.form.search'), class: 'button', name: nil %>
    </div>
  <% end %>
</div>
