<%=
CSV.generate(:col_sep => ';') do |csv|
  csv << [t('backend.title'), t('backend.description'), t('backend.location'), t('backend.holder'), t('backend.date')]
  @events.results.each do |e|
    csv << [e.title.strip, strip_tags(e.description), e.location, e.position.holder.full_name,e.scheduled.strftime(t('time.formats.short')) ]
  end
end.encode('iso-8859-1')
%>
