<%=
  CSV.generate(col_sep: ';', encoding: 'UTF-8') do |csv|

    csv << [t('backend.title'),
            t('backend.description'),
            t('backend.location'),
            t('backend.holder'),
            t('backend.date')]

    @events.results.each do |e|
      csv << [e.title.strip,
              strip_tags(e.description),
              e.location,
              e.position.holder.full_name,
              I18n.l(e.scheduled, format: :short)]
    end
  end.html_safe
%>
