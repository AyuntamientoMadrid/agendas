<div class="row">
  <div class="small-12 large-8 columns">

    <strong class="post__date"><%= @event.scheduled.strftime(t('date.formats.complete')) %></strong>

    <h2 class="post__title-big"><%= @event.title %></h2>

    <div class="row mb40">
      <div class="small-2 large-2 columns">
        <%= social_share_button_tag(@event.title) %>
      </div>
      <div class="small-2 large-1 columns end"><a href="#"><span class="icon icon__print">Imprimir</span></a></div>
    </div>

  </div>
</div>

<div class="row mb40">
  <div class="small-12 large-4 columns">
    <strong class="post__subtitle"><%= t('show.holder')%></strong>
  </div>
  <div class="small-12 large-7 end columns">
    <p class="post__description">
      <strong><%= link_to @event.position.holder.full_name, root_path(holder: @event.position.holder.id ) %></strong>
    </p>
    <p><%= @event.position.title %></p>
    <p><%= @event.position.area.title %></p>
  </div>
</div>

<div class="row mb40">
  <div class="small-12 large-4 columns">
    <strong class="post__subtitle"><%= t('show.participants')%></strong>
  </div>
  <div class="small-12 large-7 end columns">
    <% @event.attendees.each do |attendee|%>
    <p class="post__description">
      <%= attendee.name %> - <%= attendee.company %>
    </p>
    <% end %>
    <% @event.participants.each do |participant|%>
    <p class="post__description">
      <%= participant.position.holder.full_name %> - <%= participant.position.title %> - <%= participant.position.area.title %>
    </p>
    <% end %>
  </div>
</div>

<div class="row mb40">
  <div class="small-12 large-4 columns">
    <strong class="post__subtitle"><%= t('show.location')%></strong>
  </div>
  <div class="small-12 large-7 end columns">
    <p class="post__text"><%= @event.location %></p>
  </div>
</div>

<div class="row mb40">
  <div class="small-12 large-4 columns">
    <strong class="post__subtitle"><%= t('show.description')%></strong>
  </div>
  <div class="small-12 large-7 end columns">
    <p class="post__text"><%= @event.description.html_safe%></p>
  </div>
</div>

<div class="row mb40">
  <div class="small-12 large-4 columns">
    <strong class="post__subtitle"><%= t('show.documentation')%></strong>
  </div>
  <div class="small-12 large-7 end columns">
    <% @event.attachments.each do |attachment| %>
      <p class="post__text mb20"><%= link_to attachment.title, attachment.file.path %></p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <p><%= link_to t('main.any_errors'), contact_path %></p>
  </div>
</div>
