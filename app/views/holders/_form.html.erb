<%= form_for(@holder) do |f| %>

    <% if @holder.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@holder.errors.count, "error") %> prohibited this holder from being saved:</h2>

          <ul>
            <% @holder.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <fieldset>

      <legend>Datos básicos</legend>

      <label>Nombre</label>
      <%= f.text_field :first_name %>

      <label>Apellidos</label>
      <%= f.text_field :last_name %>
    </fieldset>

    <% if @holder.persisted? %>
        <fieldset>

          <legend><%= t('backend.positions') %></legend>

          <div class="row">
            <div class="small-2 columns">Desde</div>
            <div class="small-2 columns">Hasta</div>
            <div class="small-2 columns">Titulo</div>
            <div class="small-4 columns">Área</div>
            <div class="small-2 columns"></div>
          </div>


            <%= f.fields_for :positions do |position| %>
                <%= render 'position_fields', f: position %>
            <% end %>
            <div class="row">
              <div class="left inline">
                <%= link_to_add_association 'Add position', f, :positions, :class => "button tiny info alert " %>
              </div>
            </div>

        </fieldset>

    <% end %>

    <%= submit_tag "Guardar", :class=> "button radius success right" %>
<% end %>
