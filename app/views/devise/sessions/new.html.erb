<div class="row">
  <div class="small-12 columns">
    <h2 class="title-l"><%= t('main.title')%></h2>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-6 medium-centered columns">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <h3><%= t'devise.sign_in' %></h3>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%- if devise_mapping.registerable? %>
          <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
        <% end -%>
        <%= f.label t('devise.email') %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%- if devise_mapping.recoverable? %>
          <%= link_to t('devise.forgot_password') , new_password_path(resource_name), class: 'right' %>
        <% end -%>
        <%= f.label t('devise.password') %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
        <%= f.submit t('devise.sign_in'), :class => 'button right' %>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox" style="width:250px">
            <label>
              <%= f.check_box :remember_me %> <%= t'devise.remember' %>
            </label>
          </div>
        <% end -%>
    <% end %>
  </div>
</div>
