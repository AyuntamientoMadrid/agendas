<div class="row">
  <div class="small-12 columns">
    <h2 class="title-l"><%= t('main.title')%></h2>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-6 medium-centered columns">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
      <h3><%= t'devise.forgot_password' %></h3>
      <p><%= t'devise.password_reset_instructions' %></p>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
       <%= f.submit t('devise.reset_password'), :class => 'button right' %>
    <% end %>
  </div>
</div>
