<h1>
  <%= t('backend.faq.questions') %> (<%= @questions.count %>)
  <%= link_to t('backend.faq.new_question'), new_admin_question_path, :class => "button radius warning right" if can? :create, Question %>
</h1>

<div class="row">
  <table class="event">
    <thead>
      <tr>
        <th><%= t('backend.faq.title')%></th>
        <th><%= t('backend.faq.position')%></th>
        <th class="right"><%= t('backend.faq.actions')%></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th><%= t('backend.faq.title')%></th>
        <th><%= t('backend.faq.position')%></th>
        <th class="right"><%= t('backend.faq.actions')%></th>
      </tr>
    </tfoot>
    <tbody>
      <% @questions.each do |question| %>
      <tr>
        <td>
          <%= question.title %>
        </td>
        <td>
          <%= question.position %>
        </td>
        <td class="right">
          <%= link_to edit_admin_question_path(question), title: t('backend.edit') do %>
            <i class="step fi-page-edit size-24"></i>
          <% end if can? :edit, question %>

          <%= link_to admin_question_path(question), method: :delete, data: { confirm: t("backend.delete_confirm") }, title: t('backend.delete') do%>
            <i class="step fi-page-delete size-24"></i>
          <% end if can? :destroy, question %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
