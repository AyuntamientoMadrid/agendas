<div id="<%= dom_id(f.object) %>" class="nested-fields">

  <%= f.hidden_field :id %>
  <div class="small-6 columns">
    <%= f.hidden_field :role, value: :lobby %>
    <%= f.hidden_field :active, value: 1 %>
  </div>

  <div class="small-6 columns">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="small-6 columns">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="small-6 columns">
    <%= f.label :phones %>
    <%= f.text_field :phones %>
  </div>

  <div class="small-6 columns">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="small-6 columns">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <div class="small-6 columns">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>
  </div>

</div>
