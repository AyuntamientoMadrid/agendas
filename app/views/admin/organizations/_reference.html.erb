<fieldset>
  <legend><%= t('backend.reference.title_fieldset') %></legend>
    <div class="small-12 medium-12 columns">
      <%= f.label :reference, t('backend.reference.title') %>
      <%= f.text_field :reference %>
      <%= form_field_errors(f, :reference) %>
    </div>
    <div class="small-12 medium-4 columns">
      <%= f.label :inscription_date, "Fecha de inscripción" %>
      <%= f.text_field :inscription_date, class: 'fdatepicker', value: @organization.inscription_date.present? ? I18n.l(@organization.inscription_date, format: :short) : nil %>
    </div>

    <div class="small-12 medium-4 columns">
      <%= f.label :modification_date, "Fecha de modificación" %>
      <%= f.text_field :modification_date, class: 'fdatepicker', value: @organization.modification_date.present? ? I18n.l(@organization.modification_date, format: :short) : nil %>
    </div>

    <div class="small-12 medium-4 columns">
      <%= f.label :canceled_at, "Fecha de cancelación" %>
      <%= f.text_field :canceled_at, class: 'fdatepicker', value: @organization.canceled_at.present? ? I18n.l(@organization.canceled_at, format: :short) : nil %>
    </div>
</fieldset>
