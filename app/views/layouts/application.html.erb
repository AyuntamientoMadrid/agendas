<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <title><%= content_for?(:title) ? t('site_title') + yield(:title) : t('site_title') %></title>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= auto_discovery_link_tag :atom, root_path(format: :atom) %>
    <%= auto_discovery_link_tag :rss, root_path(format: :rss) %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <%= javascript_include_tag 'dependencies/html5shiv.min' %>
      <%= javascript_include_tag 'dependencies/respond.min' %>
      <%= javascript_include_tag 'ie_lt9' %>
     <![endif]-->
  </head>
  <body class="">
    <%= render 'layouts/header' %>
    <%= render  'layouts/admin_messages' %>
    <div id="main-content" class="main-content">
      <div class="row">
        <div class="small-12">
          <div class="box">
            <%= yield %>
          </div>
        </div>
      </div>
    </div><!-- .main-content -->
    <%= render 'layouts/footer' %>
  </body>
</html>
