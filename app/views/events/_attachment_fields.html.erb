<div class="nested-fields">
  <div class="row">
    <div class="small-4 columns"><%= f.text_field :title %></div>
    <div class="small-6 columns">
    <%=
      if f.object.file.present?
        link_to f.object.title, f.object.file.url
      else
        f.file_field :file
      end
    %>
    </div>

    <div class="small-12 columns">
      <br />
      <%= t('backend.attachments_description') %>
      <%= f.text_area :description, class: 'tinymce', :rows => 10 %>
      <br />
    </div>
    <div class="attachments-public">
      <div class="small-12 columns">
        <%= f.label :public, t('backend.attachments_public'), value: false %>
        <%= f.radio_button :public, false %>
      </div>
      <div class="small-12 columns">
        <%= f.label :public, t('backend.attachments_private'), value: false %>
        <%= f.radio_button :public, false %>
      </div>
    </div>

    <div class="small-12 columns">
      <%= link_to_remove_association t('backend.delete'), f, :class => "button tiny radius alert right" %>
    </div>
  </div>
</div>
