<div class="nested-fields">
  <div class="row">
      <%= f.hidden_field :event_id, value: @event.id %>
      <div class="small-8 columns">
        <%= f.select :position_id, @participants.map{|position| [position.holder.full_name_comma+' - '+position.title, position.id]}, class: "large-8 columns unique", prompt: t('backend.select') %>
      </div>
    <div class="small-2 columns">
      <%= link_to_remove_association t('backend.delete'), f, :class => "button tiny radius alert right" %>
    </div>
  </div>
</div>
