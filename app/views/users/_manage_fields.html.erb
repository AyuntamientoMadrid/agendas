<div class="nested-fields">
  <div class="row">
    <div class="small-12 columns">
      <%= f.hidden_field :user_id, :value => @user.id %>
      <div class="small-2 columns">
        <label for="right-label" class="right inline">Seleccione</label>
      </div>
      <div class="small-8 columns">
        <%= f.select( :holder_id, @holders.collect {|a| [a.full_name_comma, a.id]}, {} ,{:class => "large-8 columns"}) -%>
      </div>
      <div class="small-2 columns">
        <%= link_to_remove_association t('backend.delete'), f, :class => "button tiny radius alert right" %>
      </div>
    </div>
  </div>
</div>
