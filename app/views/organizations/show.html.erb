<h3>Organizacion</h3>
<%= @organization.id %>

<%#= Datos %>
<%= @organization.identifier %>
<%= @organization.name %>
<%= @organization.web %>
<%= @organization.category.name %>
<%= @organization.address %>
<%= @organization.postal_code %>
<%= @organization.town %>
<%= @organization.province %>
<%= @organization.description %>

<%#= Legal Representant %>
<%= @organization.legal_representant.fullname if @organization.legal_representant.present? %>

<%#= Persona fisica de contacto %>
<%= @organization.user.name %>

<%#= Datos Lobby Cuenta propia %>
<% if @organization.fiscal_year.present? %>
  <h1>Datos economicos</h1>
  <%= @organization.fiscal_year %>
  <%= @organization.range_fund %>
  <%= @organization.subvention %>
  <%= @organization.contract %>
<% end %>

<%#= Represented Entity %>
<% @organization.represented_entities.each do |represented_entity| %>
  <%= represented_entity.identifier %>
  <%= represented_entity.fullname %>
  <%= represented_entity.from %>
  <%= represented_entity.to if represented_entity.to.present? %>
  <%= represented_entity.fiscal_year %>
  <%= represented_entity.range_fund %>
  <%= represented_entity.subvention %>
  <%= represented_entity.contract %>
<% end %>

<% @organization.agents.each do |agent| %>
  <%= agent.fullname %>
  <%= agent.from %>
  <%= agent.to if agent.to.present? %>
<% end %>

<% @organization.interests.each do |interest| %>
  <%= interest.name %>
<% end %>
