<div class="row mb40">
  <div class="small-12 medium-9 medium-centered columns">
    <%= link_to t('backend.back'), organizations_path , class: "button tiny radius" %>
    <h2 class="post__title-big"><%= t('organizations.show.title') %></h2>
    <p><%= t('organizations.show.reference') %>: <strong><%= @organization.reference %></p>
  </div>
</div>
<div class="small-12 medium-9 medium-centered columns">
  <fieldset>
    <legend><%= t('organizations.show.identifying_data_title') %></legend>
    <p><strong><%= t('organizations.show.id') %>: </strong><%= @organization.id %></p>
    <p><strong><%= t('organizations.show.identifier') %>: </strong><%= @organization.identifier %></p>
    <p><strong><%= t('organizations.show.name') %>: </strong><%= @organization.name %></p>
    <p><strong><%= t('organizations.show.postal_code') %>: </strong><%= @organization.postal_code %></p>
    <p><strong><%= t('organizations.show.town') %>: </strong> <%= @organization.town %></p>
    <p><strong><%= t('organizations.show.address') %>: </strong><%= @organization.address %></p>
    <p><strong><%= t('organizations.show.province') %>: </strong><%= @organization.province %></p>
    <p><strong><%= t('organizations.show.category') %>: </strong><%= @organization.category.name %></p>
    <p><strong><%= t('organizations.show.description') %>: </strong><%= @organization.description.html_safe if @organization.description.present?  %></p>
    <p><strong><%= t('organizations.show.web') %>: </strong> <%= @organization.web %></p>
  </fieldset>

  <fieldset>
    <legend><%= t('organizations.show.legal_representant_title') %></legend>
    <p><strong><%= t('organizations.show.legal_representant_name') %>: </strong><%= @organization.legal_representant.fullname if @organization.legal_representant.present? %></p>
  </fieldset>

  <fieldset>
    <legend><%= t('organizations.show.display_user_title') %></legend>
    <p><strong><%= t('organizations.show.user_name') %>: </strong> <%= @organization.user.name if @organization.user %></p>
  </fieldset>

  <fieldset>
    <legend><%= t('organizations.show.fiscal_year_title') %></legend>
    <% if @organization.fiscal_year.present? %>
      <p><strong><%= t('organizations.show.fiscal_year') %>: </strong> <%= @organization.fiscal_year %></p>
      <p><strong><%= t('organizations.show.range_fund') %>: </strong> <%= @organization.range_fund %></p>
      <p><strong><%= t('organizations.show.subvention') %> : </strong><%= @organization.subvention %></p>
      <p><strong><%= t('organizations.show.contract') %> </strong><%= @organization.contract %></p>
    <% end %>
  </fieldset>

  <fieldset>
    <legend><%= t('organizations.show.represented_entity_title') %></legend>
    <% @organization.represented_entities.each do |represented_entity| %>
      <p><strong><%= t('organizations.show.represented_entity_identifier') %>: </strong><%= represented_entity.identifier %></p>
      <p><strong><%= t('organizations.show.represented_entity_fullname') %>: </strong><%= represented_entity.fullname %></p>
      <p><strong><%= t('organizations.show.represented_entity_from') %> : </strong><%= represented_entity.from %></p>
      <p><strong><%= t('organizations.show.represented_entity_to') %> : </strong><%= represented_entity.to if represented_entity.to.present? %></p>
      <p><strong><%= t('organizations.show.represented_entity_range_fund') %> : </strong><%= represented_entity.range_fund %></p>
      <p><strong><%= t('organizations.show.represented_entity_fiscal_year') %> : </strong><%= represented_entity.fiscal_year %></p>
      <p><strong><%= t('organizations.show.represented_entity_subvention') %> : </strong><%= represented_entity.subvention %></p>
      <p><strong><%= t('organizations.show.represented_entity_contract') %> : </strong><%= represented_entity.contract %></p>
    <% end %>
  </fieldset>

  <fieldset>
    <legend><%= t('organizations.show.agents_title') %></legend>
    <% @organization.agents.each do |agent| %>
      <p><strong><%= t('organizations.show.agents_fullname') %>: </strong><%= agent.fullname %></p>
      <p><strong><%= t('organizations.show.agents_from') %> : </strong><%= agent.from %></p>
      <p><strong><%= t('organizations.show.agents_to') %> : </strong><%= agent.to if agent.to.present? %></p>
    <% end %>
  </fieldset>

  <fieldset>
    <legend><%= t('organizations.show.interests_title') %></legend>
    <ul>
      <% @organization.interests.each do |interest| %>
        <li>
          <%= interest.name %>
        </li>
      <% end %>
    </ul>
  </fieldset>
</div>
