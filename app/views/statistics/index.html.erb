<div class="small-12 column statistics">
  <h2>
    <%= t'statistics.statistics' %>
  </h2>
  <p>
    <%= t'statistics.description' %>
  </p>

  <ul class="accordion">

    <li class="accordion-navigation active lobbies-categories">
      <div class="accordion-title">
        <%= t'statistics.category_lobbies' %>
      </div>
      <div class="content active">
        <table>
          <thead>
            <tr>
              <th width="90%">
                <%= t'statistics.category' %>
              </th>
              <th class="text-center">
                <%= t'statistics.amount' %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @lobbies_categories.each do |name , number| %>
            <tr>
              <td>
                <%= name %>
              </td>
              <td class="text-center">
                <%= number %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </li>

    <li class="accordion-navigation active lobbies-interests">
      <div class="accordion-title">
        <%= t'statistics.interest_lobbies' %>
      </div>
      <div class="content active">
        <table>
          <thead>
            <tr>
              <th width="90%">
                <%= t'statistics.interest' %>
              </th>
              <th class="text-center">
                <%= t'statistics.amount' %>
              </th>
            </tr>
          </thead>
          <tbody>
            <%@lobbies_interests.each do |name , number| %>
              <tr>
                <td>
                  <%= name %>
                </td>
                <td class="text-center">
                  <%= number %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </li>

    <li class="accordion-navigation active">
      <div class="accordion-title">
        <%= t'statistics.description_lobbies' %>
      </div>
      <div class="content active">
        <table>
          <tbody>
            <tr>
              <th colspan="3">
                <%= t'statistics.inscribed_lobbies' %>
                <br />
                <span class="active-lobbies">
                  <%= @lobbies.count %>
                </span>
                <tr>
                  <td class="border-right">
                    <strong>
                      <%= t'statistics.employed' %>
                    </strong>
                    <br />
                    <span class="self-employed-count">
                      <%= self_employed_lobbies_count(@lobbies) %>
                    </span>
                  </td>
                  <td class="border-right">
                    <strong>
                      <%= t'statistics.self_employed' %>
                    </strong>
                    <br />
                    <span class="employed-count">
                      <%= employee_lobbies_count(@lobbies) %>
                    </span>
                  </td>
                  <td>
                    <strong>
                      <%= t'statistics.agents' %>
                    </strong>
                    <br />
                    <span class="active-agents-count">
                      <%= @active_agent_count %>
                    </span>
                  </td>
                </tr>
              </th>
            </tr>
          </tbody>
        </table>
      </div>
    </li>

    <li class="accordion-navigation active">
      <div class="accordion-title">
        <%= t 'statistics.public_agendas' %>
      </div>
      <div class="content active">
        <table>
          <tbody>
            <tr>
              <th>
                <%= t'statistics.lobby_events' %>
              </th>
              <td class="text-center">
                <span class="lobby-activity">
                  <%= @event_lobby_activity %>
                </span>
              </td>
            </tr>
            <tr>
              <th>
                <%= t'statistics.total_events' %>
              </th>
              <td class="text-center">
                <span class="events-count">
                  <%= @events_count %>
                </span>
              </td>
            </tr>
            <tr>
              <th>
                <%= t'statistics.amount_public_agendas' %>
              </th>
              <td class="text-center">
                <span class="holders-count">
                  <%= @holders_count %>
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </li>

  </ul>
</div>
